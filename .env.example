# Application Configuration
APP_NAME=SEO Optimization API
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# AI Service Configuration
AI_PROVIDER=openai
AI_MODEL=gpt-3.5-turbo
AI_API_KEY=your_openai_api_key_here
AI_BASE_URL=
AI_TIMEOUT=30
AI_MAX_RETRIES=3

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Security
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=*

# External Services
ENABLE_COMPETITOR_ANALYSIS=true
SCRAPING_DELAY=1.0
MAX_CONCURRENT_REQUESTS=10

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090